<% @user ||= current_user %>

<div class="panel panel-primary">
    <div class="panel-heading">
        Following <span class="badge pull-right"><%= @user.followed_users.count %></span>
    </div>
    <div class="panel-body" id="user-list-element-following">
        <%= render @user.followed_users %>
    </div>

    <div class="panel-heading">
        Followed by <span class="badge pull-right" id="followers"><%= @user.followers.count %></span>
    </div>
    <div class="panel-body" id="user-list-element-followers">
        <%= render @user.followers %>
    </div>
</div>

<% if signed_in? && @user == current_user %>
    <br/>
    <div style="text-align: center;">
        <button class="btn btn-small btn-info" type="button">New group</button>
    </div>
<% end %>




