<%= render 'new_debate_modal' %>


<div class="row">
<div class="span6">
<h3>Public Debates</h3>
</div>
<div class="span6">

<button class="btn btn-large btn-info pull-right" type="button" data-toggle="modal" 
data-target="#createModal">
	Create a new Public Debate</button>
</div>
</div>

<div class="row">
    <div class="span5">

<div class="row">
	<div class="span4">
	<form class="form-search">
	<div class="input-append">
	<input type="text" class="span3 search-query" placeholder="General terms of search..." name="search" id="search">
	<button type="submit" class="btn">Search</button>
	</div>
	</form>
	</div>
</div>

<div class="row">
	<div class="span3">
	<div class="panel panel-primary">
	<table class="table">
  	<% @tags.each do |tag|%>
  	<tr>
       	<td><input type="checkbox" class="checkbox"/>    <%= tag%></td>
  	</tr>
  	<% end %>
	</table>
	</div>
	</div>
</div>
	</div>

