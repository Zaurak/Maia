                <tr>
                  <td><input type="checkbox" class="checkbox"/>List of friends</td>
                </tr>
                </table>
                </div>
                </div>
              <td>
-->
          </tr>
        </table>
        
      </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <%= f.submit "New Debate", class: "btn btn-primary" %>
    <% end %>

      </div>
    </div>
  </div>
</div>
